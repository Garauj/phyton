class codigo1:
    def __init__(self, saldo):
        self.saldo = saldo

    def depositar(self, valor):
        self.saldo += valor

    def sacar(self, valor):
        self.saldo -= valor

    def extrato(self):
        print(f"saldo é {self.saldo}")


def main():
    caixa = codigo1(100) #instancia pela classe
    caixa.depositar(10) #altera parâmetro pelo objeto
    caixa.sacar(1) #altera parâmetro pelo objeto
    caixa.extrato() #altera parâmetro pelo objeto

if __name__ == "__main__":
    main()
